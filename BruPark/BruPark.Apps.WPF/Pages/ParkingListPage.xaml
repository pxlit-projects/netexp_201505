                    <StackPanel Cursor="Hand" Margin="4" Orientation="Vertical">
                        <TextBlock Text="{Binding AddressNL}"/>
                        <TextBlock Margin="0,4,0,0" Text="{Binding AddressFR}"/>

                        <DockPanel LastChildFill="True" Margin="0,4,0,0">
                            <TextBlock DockPanel.Dock="Left" Margin="4,0" Text="{Binding Distance, Converter={converters:DistanceConverter}}"/>
                            <TextBlock DockPanel.Dock="Left" Margin="4,0" Text="{Binding Duration, Converter={converters:DurationConverter}}"/>
                            <TextBlock DockPanel.Dock="Right" Margin="4,0" Text="{Binding SuccessRate, Converter={converters:SuccessRateConverter}}" TextAlignment="Right"/>
                        </DockPanel>
                    </StackPanel>
